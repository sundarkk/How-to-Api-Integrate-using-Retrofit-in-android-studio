<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">


    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_110sdp"
        android:scaleType="fitXY"
        android:src="@drawable/rajput"
        />

  <!--  <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_110sdp"
        android:scaleType="fitXY"
        android:src="@drawable/rajput"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView2.Cut" />
-->
    <com.sundar.shopping.custom_classes.CustomTextViewBold
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_toRightOf="@+id/item_image"
        android:text="@string/saara"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />
    <RatingBar
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:max="5"
        android:rating="1"
        android:scaleX=".6"
        android:scaleY=".6"
        android:clickable="false"
        android:secondaryProgressTint="@android:color/transparent"

      android:progressTint="@color/dark_yellow"
        android:layout_alignParentRight="true" />

    <com.sundar.shopping.custom_classes.CustomTextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_toRightOf="@+id/item_image"
        android:text="@string/saara_descprition" />

</RelativeLayout>