<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/arrival_main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_5sdp"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/price_off_image"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_160sdp"
        android:background="@color/black"
        android:scaleType="fitXY"
        android:src="@drawable/serwani" />

<!--  app:shapeAppearance="?attr/shapeAppearanceMediumComponent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Card.Media"-->
    <com.sundar.shopping.custom_classes.CustomTextViewBold
        android:id="@+id/text_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="@string/up_to_45_off"
        android:textColor="@color/black"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:textSize="@dimen/_12sdp" />

    <com.sundar.shopping.custom_classes.CustomTextViewMedium
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/on_dresses"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:textStyle="bold" />


</LinearLayout>